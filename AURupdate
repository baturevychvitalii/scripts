#!/bin/zsh

. Vglobals.sh

echo "checking for updates in AUR...";

cur_dir=$PWD;

for pac in $(ls $AUR_GIT_FOLDER); do
	echo -e "\n$pac";
	cd $AUR_GIT_FOLDER/$pac;
	response="$(git pull)";
	if [ "$response" = "Already up to date." ]; then
		echo "nothing to do";
	else
 		makepkg -sic;
		echo -e "\n\n";		
	fi
done

cd $cur_dir;

echo -e "\nfinito)";
